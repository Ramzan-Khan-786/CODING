    "terminal.integrated.sendKeybindingsToShell": false,
    "accessibility.hideAccessibleView": false,
    "workbench.settings.useSplitJSON": false,
    "C_Cpp.loggingLevel": "Error",
    "workbench.panel.opensMaximized": "never"
}